<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:weightSum="10"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imgView_GioHang"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="110dp"/>

        <LinearLayout
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="5dp"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/txtViewTenSP_GioHang"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="5dp"
                android:text="Gia"
                android:textColor="#303030"
                android:textSize="13sp"
                android:id="@+id/txtViewGiaSP_GioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Size:"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:focusable="false"
                    android:textSize="13sp"
                    android:entries="@array/spinner_Size"
                    android:id="@+id/spinner_Size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:padding="2px"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="-"
                    android:id="@+id/btn_Giam"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <Button
                    android:background="#f2f2f2"
                    android:text="0"
                    android:id="@+id/btn_SoLuong"
                    android:layout_width="50dp"
                    android:layout_height="40dp"/>
                <Button
                    android:text="+"
                    android:id="@+id/btn_Tang"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>