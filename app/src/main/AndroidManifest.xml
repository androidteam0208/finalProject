    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AdidasActivity">
        </activity>
        <activity android:name=".activity.ChiTietSanPham">
        </activity>
        <activity android:name=".activity.GioHang">
        </activity>
        <activity android:name=".activity.ThongTinKhachHang">
        </activity>
        <activity android:name=".activity.Search_activity">
        </activity>
    </application>

</manifest>